<UserControl x:Class="Human_Resources_Management_System.UserControls.SupportContacts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_Resources_Management_System.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="2*" />
           
        </Grid.RowDefinitions >

        <Grid Grid.Row="0" Background="LightGray">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0">
                <StackPanel>
                    <TextBlock FontSize="30" HorizontalAlignment="Center" FontFamily="Segoe UI Light" >
                                Contact Us
                    </TextBlock>
                </StackPanel>
               
                <StackPanel >
                    <TextBlock FontSize="20" HorizontalAlignment="Center" FontFamily="Segoe UI Light">Thank you for using our system!</TextBlock>
                    <TextBlock FontSize="20" HorizontalAlignment="Center" FontFamily="Segoe UI Light">
                        We are always ready to assist you  in improving your experience with the system.
                    </TextBlock>
                    
                </StackPanel>
            </StackPanel>
            
        </Grid>
        <Grid Grid.Row="1" Background="Gray">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                <TextBlock FontSize="30" FontFamily="Segoe UI Light">We Have a Professional</TextBlock>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontFamily="Segoe UI Light">Support Team</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
                <!-- First Square -->
                <StackPanel x:Name="SquareStackPanel1" Width="300" Height="300" Background="White" Margin="0,0,30,0"
                        MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave" >
                    <StackPanel.Effect>
                        <DropShadowEffect x:Name="DropShadow1" Color="Black" BlurRadius="15" ShadowDepth="5" Direction="315" Opacity="0.5" />
                    </StackPanel.Effect>
                    <Image x:Name="Mapicon"  Width="150" Height="150" Margin="0,20,0,0"/>
                    <TextBlock FontSize="24" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">Location</TextBlock>
                    <TextBlock FontSize="20" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">Brgy. Biga I, Silang, Cavite,</TextBlock>
                    <TextBlock FontSize="20" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">Philippines</TextBlock>
                </StackPanel>

                <!-- Second Square -->
                <StackPanel x:Name="SquareStackPanel2" Width="300" Height="300" Background="White" Margin="0,0,30,0"
                        MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
                    <StackPanel.Effect>
                        <DropShadowEffect x:Name="DropShadow2" Color="Black" BlurRadius="15" ShadowDepth="5" Direction="315" Opacity="0.5" />
                    </StackPanel.Effect>
                    <Image 
                        x:Name="Phoneicon"
                       Width="150" Height="150" Margin="0,20,0,0"/>
                    <TextBlock FontSize="24" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">Live Support</TextBlock>
                    <TextBlock FontSize="20" Foreground="Black" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">+630 2345 6789</TextBlock>
                   
                </StackPanel>

                <!-- Third Square -->
                <StackPanel x:Name="SquareStackPanel3" Width="300" Height="300" Background="White" Margin="0,0,0,0"
                        MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
                    <StackPanel.Effect>
                        <DropShadowEffect x:Name="DropShadow3" Color="Black" BlurRadius="15" ShadowDepth="5" Direction="315" Opacity="0.5" />
                    </StackPanel.Effect>
                    <Image 
                        x:Name="Humanwithphoneicon"
                        Width="150" Height="150" Margin="0,20,0,0"/>
                    <TextBlock FontSize="24" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Light">Help and Support</TextBlock>
                    <TextBlock FontSize="15" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" FontFamily="Segoe UI Light">cs3a2024adtechsupp@gmail.com</TextBlock>
                    
                </StackPanel>
            </StackPanel>
        </Grid>


    </Grid>
</UserControl>
